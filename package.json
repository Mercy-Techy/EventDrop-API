  "author": "Arawole Mercy",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "start:prod": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
